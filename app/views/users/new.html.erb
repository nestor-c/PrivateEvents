<div class="container">
    <div class="content">
        <h1> New User Sign-Up </h1>

        <%= form_with model: @user do |f|%>
            <%=f.label :email%><br/>
            <%=f.text_field :email, class:"input is-medium"%><br/><br/>
            <%=f.label :name %><br/>
            <%=f.text_area :name, class:"textarea"%><br/><br/>
            <%=f.button "Create User"%>
        <%end%>
    </div>
</div>