<!DOCTYPE html>
<html>
  <head>
    <title>Private Events</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%flash.each do |name, msg|%>
      <%=content_tag :div, msg, id: "flash #{name}", class: "notification is-primary"%>
    <%end%>
    
    <div class="navbar">
        <div class="navbar-brand">
            <div class="title is-1 " style="display:inline-block;">
              <%=link_to root_path do%>
                Priv<%= image_tag  "LockA.png" %>te Events   
              <%end%>
            </div>          
        </div>
        <% if current_user %> 
          <div class="navbar-start">
            <div class="navbar-item"> 
              <%= link_to "Hello, #{current_user.name.capitalize()}", root_path, class: "title", style: "margin-left: 25px;" %>
            </div>
          </div>
        
          <div class="navbar-end">
            <div class="navbar-item">
              <%= link_to "Create New Event", new_event_path, class:"button", style: "margin-top: 15px; margin-right: 15px" %>
              <%= link_to "Invite User", users_path, class:"button", style: "margin-top: 15px; margin-right: 15px" %>
              <%= link_to "Log Out", session_path(session[:current_user_id]), class:"button", method: "delete", style: "margin-top: 15px; margin-right: 15px" %>
            </div>
          </div>
        <%else%>
          <div class="navbar-start">
          </div>
          <div class="navbar-end">
            <div class="navbar-item">
              <%= link_to "Log In", new_session_path, class: "button is-medium",  style: "margin-top: 15px; margin-right: 15px" %>
              <%= link_to "Sign Up", new_users_path, class: "button is-medium",  style: "margin-top: 15px; margin-right: 15px"  %>
            </div>
          </div>
        <%end%> 
    </div>
        
        
          
        
      </div>
    </div>
      <div class="section">
        <%= yield %>
      </div>
    
  </body>
</html>
